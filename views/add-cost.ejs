<div class="row mt-5">
  <div class="col-md-6 m-auto">
    <div class="card card-body">
      <h1 class="text-center mb-3">
        <i class="fas fa-coins"></i> Create Cost Transaction
      </h1>
      <form
        action="/api/v1/transactions/costs?token=<%= token %>"
        method="POST"
      >
        <div class="form-group">
          <label for="amount">Amount</label>
          <input
            type="number"
            id="amount"
            name="amount"
            class="form-control"
            placeholder="Enter Amount"
            value="<%= typeof amount != 'undefined' ? amount : 0 %>"
            
          />
        </div>
        <div class="form-group">
          <p>Choose Currency</p>

          <label for="currency-uah"
            >UAH<input
              type="radio"
              id="currency-uah"
              name="currency"
              class="form-control"
              value="UAH"
              <% if (defaultCurrency === "UAH") { %>
                checked
              <% } %>
            />
          </label>
          <label for="currency-usd"
            >USD<input
              type="radio"
              id="currency-usd"
              name="currency"
              class="form-control"
              value="USD"
              <% if (defaultCurrency === "USD") { %>
                checked
              <% } %>
            />
          </label>
          <label for="currency-eur"
            >EUR<input
              type="radio"
              id="currency-eur"
              name="currency"
              class="form-control"
              value="EUR"
              <% if (defaultCurrency === "EUR") { %>
                checked
              <% } %>
            />
          </label>
        </div>
        <div class="form-group">
          <label for="category">Category</label>
          <p>
            <select
              name="category"
              id="category"
              type="text"
              class="form-control"
              required
            >
              <option disabled>Select Category</option>
              <option value="Food">Food</option>
              <option value="Transport">Transport</option>
              <option value="Health">Health</option>
              <option value="House">House</option>
              <option value="Leasure">Leasure</option>
              <option value="Education">Education</option>
              <option value="Other">Other</option>
            </select>
          </p>
        </div>
        <div class="form-group">
          <label for="comment">Comment</label>
          <input
            type="text"
            id="comment"
            name="comment"
            class="form-control"
            placeholder="Enter Comment"
            value="<%= typeof comment != 'undefined' ? comment : '' %>"
          />
        </div>

        <button type="submit" class="btn btn-success btn-block">
          Save
        </button>
      </form>
    </div>
  </div>
</div>
